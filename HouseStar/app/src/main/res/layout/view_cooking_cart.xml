<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_height="match_parent"
    android:layout_width="match_parent" android:background="@color/white">

    <TextView android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/orange"
        android:textSize="24dip"
        android:layout_margin="5dip"
        android:layout_gravity="center"
        android:text="Cooking Cart"
        android:textStyle="italic" />

    <ListView android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/ListViewCatalog"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:background="@color/white"
        android:cacheColorHint="@color/white"
        android:clickable="true"
        android:choiceMode="multipleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="20.0sp">
    </ListView>

    <LinearLayout android:id="@+id/LinearLayout01"
        android:layout_width="fill_parent" android:layout_height="wrap_content"
        android:orientation="horizontal" android:layout_gravity="center"
        android:layout_margin="5dip">

        <Button android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/darkorange"
            android:textColor="@color/white"
            android:id="@+id/ButtonStartCooking"
            android:text="Start Cooking"
            android:padding="10dp"
            android:layout_weight="1"/>

    </LinearLayout>


</LinearLayout>